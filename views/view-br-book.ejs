<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Borrow/Return Information</title>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
        line-height: 1.6;
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 8px;
        border: 1px solid #ddd;
    }

    th {
        background-color: #007bff;
        color: #fff;
        text-align: left;
    }

    tbody tr:nth-child(even) td {
        background-color: #f2f2f2;
    }

    tbody tr:hover td {
        background-color: #ddd;
    }

    form {
        margin-bottom: 20px;
    }

    input[type="text"],
    input[type="submit"],
    button {
        padding: 8px;
        margin-right: 10px;
        border: none;
        border-radius: 5px;
    }

    input[type="text"] {
        width: 200px;
    }

    input[type="submit"],
    button {
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover,
    button:hover {
        background-color: #0056b3;
    }

    a.button {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        color: white;
        background-color: #007bff;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    a.button:hover {
        background-color: #0056b3;
    }
</style>

<body>
    <h1>Borrow/Return Information</h1>
    <form action="/search-br" method="GET">
        <input type="text" name="user_id" placeholder="Enter User ID">
        <input type="text" name="book_id" placeholder="Enter Book ID">
        <button type="submit">Search</button>
    </form>
    <table class="book-table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Book id</th>
                <th>Book Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Borrow Date</th>
                <th>Return Date</th>
                <th>status</th>
            </tr>
        </thead>
        <tbody>
            <% borrows.forEach(function(book) { %>
                <tr>
                    <td><%= book.user_id %></td>
                    <td><%= book.id %></td>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.genre %></td>
                    <td><%= new Date(book.borrow_date).toLocaleDateString('en-US', {timeZone: 'UTC'}) %></td>
                    <td><%= book.return_date ? new Date(book.return_date).toLocaleDateString('en-US', {timeZone: 'UTC'}) : 'Not Returned' %></td>
                    <td><%= book.status %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/dashboard" class="button">Back to Dashboard</a>
</body>
</html>