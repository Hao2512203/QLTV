<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
        line-height: 1.6;
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
    }

    form {
        margin-bottom: 20px;
    }

    input[type="text"],
    button {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s ease;
    }

    input[type="text"] {
        width: 200px;
    }

    input[type="text"]:focus,
    button:focus {
        outline: none;
        border-color: #007bff;
    }

    button {
        background-color: #007bff;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button:hover {
        background-color: #0056b3;
    }

    .book-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .book-table th,
    .book-table td {
        padding: 8px;
        border: 1px solid #ddd;
    }

    .book-table th {
        background-color: #007bff;
        color: #fff;
        text-align: left;
    }

    .book-table td {
        background-color: #fff;
    }

    .book-table tr:nth-child(even) td {
        background-color: #f2f2f2;
    }

    .book-table tr:hover td {
        background-color: #ddd;
    }

    .action-button {
        display: inline-block;
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 3px;
        transition: background-color 0.3s ease;
    }

    .action-button:hover {
        background-color: #0056b3;
    }
</style>
<body>
    <h1>Manage Users</h1>
    <form action="/search-users" method="GET">
        <input type="text" name="query" placeholder="Search users..." required>
        <button type="submit">Search</button>
    </form>
    <table class="book-table table-hover">
        <tr>
            <th>Full Name</th>
            <th>Username</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        <% users.forEach(user => { %>
        <tr>
            <td><%= user.full_name %></td>
            <td><%= user.username %></td>
            <td><%= user.phone %></td>
            <td><%= user.role %></td>
            <td>
                <a href="/delete-user/<%= user.username %>" class="action-button">Delete</a>
            </td>
        </tr>
        <% }) %>
    </table>
    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>